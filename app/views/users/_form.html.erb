<div class='well'>
  <%= form_for @user do |f| %>
    <%= render 'shared/errors', obj: @user %>
    <div class='control-group'>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.text_field :password %>
    </div>
    <p/>
    <br/>
    <%= f.submit(@user.new_record? ? "Register" : 'Update Profile', class: 'btn btn-primary') %>
  <% end %>
</div>
